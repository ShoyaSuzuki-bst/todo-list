<div class="mt-5">
    <%= form_for @task, url: {action: "create"} do |f| %>
        <%= f.text_field :name, placeholder: "What's task name?", class: "form-control" %>
        <br>
        <%= f.text_area :detail, placeholder: "task detail", size: "60x12", class: "form-control" %>
        <br>
        <div class="text-right"><%= f.submit "作成", class: "btn btn-primary" %></div>
    <% end %>
</div>
