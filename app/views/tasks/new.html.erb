<div class="mt-5">
    <%= form_for @task, url: {action: "create"} do |f| %>
        <% if @task.errors.any? %>
        <div class="alert alert-warning">
            <ul>
            <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>
        <%= f.text_field :name, placeholder: "タスク名を入力してください（必須）?", class: "form-control" %>
        <br/>
        <%= f.text_area :detail, placeholder: "タスクについての詳細な説明。", size: "60x12", class: "form-control" %>
        <br/>
        <div class="text-right"><%= f.submit "Create", class: "btn btn-primary" %></div>
    <% end %>
</div>