<div class="mt-5">
    <%= form_for @task, url: {action: "update"} do |f| %>
        <% if @task.errors.any? %>
        <div class="alert alert-warning">
            <ul>
            <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>
        <%= f.text_field :name, placeholder: "タスク名を入力してくだ", value: @task.name, class: "form-control" %>
        <br/>
        <%= f.text_area :detail, placeholder: "task detail", size: "60x12", value: @task.detail, class: "form-control" %>
        <br/>
        <div class="text-right"><%= f.submit "Update", class: "btn btn-warning" %></div>
    <% end %>
</div>