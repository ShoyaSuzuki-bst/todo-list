<div class="mt-5">
    <%= form_for @task, url: {action: "update"} do |f| %>
        <%= f.text_field :name, placeholder: "What's task name?", value: @task.name, class: "form-control" %>
        <br/>
        <%= f.text_area :detail, placeholder: "task detail", size: "60x12", value: @task.detail, class: "form-control" %>
        <br/>
        <div class="text-right"><%= f.submit "Update", class: "btn btn-warning" %></div>
    <% end %>
</div>