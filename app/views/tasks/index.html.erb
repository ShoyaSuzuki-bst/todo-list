<div class="mt-3 mw-100 text-right text-primary">
    <%= link_to '＋新規作成', new_task_path %>
</div>
<div class="mt-5 list-group list-group-flush">
    <div class="list-group-item">
        <div class="row">
            <div class="col">
                タスク名
            </div>
            <div class="col">
                タスクの詳細
            </div>
            <div class="col">
                作成日
            </div>
        </div>
    </div>
    <% @tasks.each do |t| %>
        <%= link_to task_path(t.id), class: 'list-group-item list-group-item-action' do %>
            <div class="row">
                <div class="col text-truncate">
                    <%= t.name %>
                </div>
                <div class="col text-truncate">
                    <%= t.detail %>
                </div>
                <div class="col text-truncate">
                    <%= t.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
